@page
@model Abby.Pages.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create new Category</h2>
            <hr />
        </div>
        <div asp-validation-summary=All class=text-danger></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control"/>
            <span asp-validation-for=Category.Name class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class=form-control/>
            <span asp-validation-for=Category.DisplayOrder class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success" style="width:175px;"><i class="bi bi-file-earmark-plus"></i>&nbsp;Create Category</button>
        <a asp-page="Index" class="btn btn-danger" style="width:175px;"><i class="bi bi-arrow-left-square"></i>&nbsp;Back to List</a>

    </div>
</form>

@section Scripts{
    @{
            <partial name=_ValidationScriptsPartial></partial>
    }
}